{
  "name": "Atlas: Your Dog Buddy",
  "description": "Atlas the dog pops up and walks across your screen every few minutes to keep you company while you browse the web.",
  "version": "1.3",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "gifs/atlasWalk.gif",
        "gifs/christmas-atlas.gif",
        "gifs/atlasDigging.gif",
        "gifs/christmas-atlasDigging.gif"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "js": ["scripts/atlasDog.js"],
      "css": ["css/styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["activeTab", "storage"]
}
